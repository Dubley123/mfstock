# ==================== (一) 路径配置 ====================
# (均以 project_root 的相对路径表示)
paths_config:
  # 1. 回测需要用到的一些数据文件
  adj_close_path: "data/backtest_data/adj_close.parquet"
  suspension_limit_path: "data/backtest_data/suspension_limit.parquet"
  stock_pool_path: "data/backtest_data/stock_pool.parquet"
  market_value_path: "data/backtest_data/market_value.parquet"
  
  # 2. 回测因子的文件或所在目录
  # 1) 如果是目录，会搜索目录下所有的 .parquet 文件并进行回测
  # 2) 如果是 .parquet 文件，直接进行回测
  factor_path: "output/4539e1f380f0"

  # 3. 回测结果保存的目录
  result_dir: "backtest_result"


# ==================== (二) 回测参数配置 ====================
backtest_config:
  # 1. 回测区间
  start_date: '2020'  # 回测起始日期（不早于因子的最早日期）
  end_date: null    # 回测结束日期（不晚于因子的最晚日期）

  # 2. 中性化方式:
  # 1) null表示不中性化
  # 2) 'cap'表示市值中性化
  neutralize: null

  # 3. 回测频率（调仓周期）
  backtest_frequency: "monthly"

  # 4. 是否将回测结果保存为文件
  save_backtest_result: true      